@page
@model wujasanator.Pages.Slots.WujasanatorModel
@{
    ViewData["Title"] = "Wujasanator 3000";
}

@*<link rel="stylesheet" href="~/css/pixelButtons.css">*@
<link rel="stylesheet" href="~/css/wujasanatorStyles.css">
<body>
    <div id="contentFlexWrapper" class="d-flex h-100">
        <div id="machineBoundary" class="d-flex">
            <img src="~/assets/banner.png" id="banner" />
            <div id="slotPaddingWrapper" class="d-flex">
                <div id="slotArea">
                    <div id="reelContainer" class="row h-100 w-100 m-0">
                        <div class="reel col h-100 p-0">
                            <div id="tile00" class="tile"><img src="/assets/wujasanator/symbols/apple.svg" class="h-100" /></div>
                            <div id="tile01" class="tile"><img src="/assets/wujasanator/symbols/apple.svg" class="h-100" /></div>
                            <div id="tile02" class="tile"><img src="/assets/wujasanator/symbols/apple.svg" class="h-100" /></div>
                        </div>
                        <div class="reel col h-100 p-0">
                            <div id="tile10" class="tile"><img src="/assets/wujasanator/symbols/apple.svg" class="h-100" /></div>
                            <div id="tile11" class="tile"><img src="/assets/wujasanator/symbols/apple.svg" class="h-100" /></div>
                            <div id="tile12" class="tile"><img class="h-100" /></div>
                        </div>
                        <div class="reel col h-100 p-0">
                            <div id="tile20" class="tile"><img class="h-100" /></div>
                            <div id="tile21" class="tile"><img class="h-100" /></div>
                            <div id="tile22" class="tile"><img class="h-100" /></div>
                        </div>
                        <div class="reel col h-100 p-0">
                            <div id="tile30" class="tile"><img class="h-100" /></div>
                            <div id="tile31" class="tile"><img class="h-100" /></div>
                            <div id="tile32" class="tile"><img class="h-100" /></div>
                        </div>
                        <div class="reel col h-100 p-0">
                            <div id="tile40" class="tile"><img class="h-100" /></div>
                            <div id="tile41" class="tile"><img class="h-100" /></div>
                            <div id="tile42" class="tile"><img class="h-100" /></div>
                        </div>
                    </div>
                </div>
                <div id="controlPanel" class="d-flex flex-row flex-wrap">
                    <img src="~/assets/wujasanator/wujasanator_minus_button.png" class="h-100" onclick="decreaseBet()">
                    <div id="amountIndicatorWrapper" class="h-100">
                        <div class="position-relative w-100 h-100">
                            @* TODO: fix img breaking on low res *@
                            <img id="amountIndicator" src="~/assets/wujasanator/wujasanator_amount_indicator_bg.png" class="h-100">
                            <span id="amountIndicatorValue" class="">1.00</span>
                        </div>
                    </div>
                    <img src="~/assets/wujasanator/wujasanator_plus_button.png" class="h-100" onclick="increaseBet()">
                    @Html.AntiForgeryToken()
                    <img id="spinButton" src="~/assets/wujasanator/wujasanator_spin_button.png" class="h-100 ms-auto align-self-end">
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{
    <script src="~/js/jquery.fittext.js"></script>
    <script src="~/js/wujasanator.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}